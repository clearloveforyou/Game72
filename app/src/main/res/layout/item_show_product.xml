<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/line_show_product"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_show_product_userhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_show_product_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="kiss000"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_show_product_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_show_product"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/rel_show_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_show_product_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_show_product_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="3"
            android:text="haahhahhahahhhaha"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/rel_show_product_zan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/txt_show_product_desc">

            <TextView
                android:id="@+id/txt_show_product_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="21小时前"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_show_product_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:drawableLeft="@mipmap/button_praise_normal"
                android:text="3"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rel_show_product_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/rel_show_product_zan">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="…………………………………………………………………………………………………………………"
                android:lines="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_detail_kefu"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/txt_show_product_comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我是中国人"
                    android:textSize="13sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/txt_show_product_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是真的好"
                    android:textSize="13sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>