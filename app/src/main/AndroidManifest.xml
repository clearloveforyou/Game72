<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenhand.game73">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".fm.home.MainActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".fm.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".fm.splash.GuideActivity" />
        <activity
            android:name=".fm.splash.AdsActivity"
            android:theme="@style/AdsThem" />
        <activity android:name=".base.BaseActivity" />
    </application>

</manifest>